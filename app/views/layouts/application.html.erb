    </ul>

    <section class="top-bar-section">
      <!-- Left Nav Section -->
      <ul class="left">
        <li><a href="#"><%= link_to "Home", file_imports_path %></a></li>
        <li><a href="#"><%= link_to "Upload Whipple Hill Spreadsheet", whipple_hills_path %></a></li>
      </ul>
    </section>
  </nav>  

  <div class="row">
    <div class="large-12 columns">
      <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "formToWizard" %>
  </body>
</html>